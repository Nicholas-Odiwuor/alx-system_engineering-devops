# 4-mysql_configuration_replica

# MySQL replica configuration

[mysqld]
server-id               = 2
relay-log               = /var/log/mysql/mysql-relay-bin.log
log_bin                 = /var/log/mysql/mysql-bin.log
binlog_do_db            = tyrell_corp
expire_logs_days        = 10
max_binlog_size         = 100M

